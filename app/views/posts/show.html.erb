                  <% else %>
                    <%= image_tag"no-image.png", id: "assets" %>
                  <% end %>
                </div>
                <div class="good_user_name">
                  <%= user.name %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div> -->
      </div>
    </div>
  </div>
</div>